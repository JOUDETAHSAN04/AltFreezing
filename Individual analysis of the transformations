plt.xlabel('Video Name')
plt.ylabel('Difference in Prediction Score')
plt.title('Impact of Gamma Transform (gamma=12) on Prediction Scores')
plt.xticks(rotation=45, ha='right')
plt.legend()
plt.grid(True)
plt.tight_layout()
plt.show()

